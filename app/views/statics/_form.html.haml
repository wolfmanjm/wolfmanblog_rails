= form_for(@static) do |f|
  - if @static.errors.any?
    #error_explanation
      %h2
        = pluralize(@static.errors.count, "error")
        prohibited this static from being saved:
      %ul
        - @static.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :position
    %br/
    = f.text_field :position
  .field
    = f.label :body
    %br/
    = f.text_area :body, :rows => 40, :cols => 80
  .actions
    = f.submit
      